@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link rel="stylesheet" type="text/css" href="~/Content/css/styles.css" />

</head>

<body>

    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="~/Content/images/borsa.png" style="width:100%">
            <h3>Kullanıcı Bilgileri</h3>
            <br />
            <table class="table table-bordered">
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>e-Posta</th>
                    <th>Şifre</th>

                </tr>
                <tr>
                    <th>Kullanıcı1</th>
                    <th>example@gmail.com</th>
                    <th>123456</th>
                </tr>
            </table>
        </div>
        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img src="~/Content/images/borsa.png" style="width:100%">
            <br />
            <h3>Varlıklarım</h3>
            <table class="table table-bordered">
                <tr>
                    <th>Coin Adı</th>
                    <th>Miktar</th>
                    <th>Piyasa Değeri</th>

                </tr>
                <tr>
                    <th>BitCoin</th>
                    <th>4</th>
                    <th>49.233</th>
                </tr>
                <tr>
                    <th>Ethereum</th>
                    <th>40</th>
                    <th>3.900</th>
                </tr>
            </table>
            <input type="text" id="bitcoin" placeholder="Coin"> <br />
            <input type="text" id="miktar" placeholder="miktar"> <br />
            <br /> <input type="button" id="add-row" value="Ekle">
        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="~/Content/images/borsa.png" style="width:100%">
            <div class="tablo">
                <table>
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>İstenilen Coin</th>
                            <th>Miktar</th>
                            <th>Verlibilecek Coin</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    
                    <thead>
                        <tr>
                            <td>kullanıcı1</td>
                            <td>BTC</td>
                            <td>2</td>
                            <td>ETH</td>
                            <td><a style="height:30px;"  class="btn btn-info" href="/Home/AlisVeris">Takas</a></td>
                        </tr>
                    </thead>
                </table>
                <form>
                    <input type="text" id="name" placeholder="Adınızı Giriniz"> <br />
                    <input type="text" id="bitcoin" placeholder="İstediğiniz Coin"> <br />
                    <input type="text" id="takas" placeholder="Verilecek Coin"> <br />
                    <br /> <input type="button" id="add-row" value="Ekle">
                </form>
            </div>
        </div>
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/script.js" href="stylesheet"></script>
</body>
